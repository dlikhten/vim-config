" Small default width for NERDTree pane
let g:NERDTreeWinSize = 31

" Change working directory if you change root directories
let g:NERDTreeChDirMode=2

" Automatically show hidden files
let g:NERDTreeShowHidden = 1

" Open nerdtree in gui mode
let g:nerdtree_tabs_open_on_gui_startup = 1

" Don't open nerdtree in console mode
let g:nerdtree_tabs_open_on_console_startup = 0

" unfocus nerdtree for meaningful tab names
let g:nerdtree_tabs_meaningful_tab_names = 1
